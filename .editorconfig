# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# Java
[*.java]
indent_size = 4

# C#
[*.cs]
indent_size = 4

# Go
[*.go]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# XML
[*.xml]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# SQL
[*.sql]
indent_size = 2
